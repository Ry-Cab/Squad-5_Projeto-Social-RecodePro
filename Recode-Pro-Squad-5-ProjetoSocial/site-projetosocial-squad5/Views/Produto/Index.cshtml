@model IEnumerable<site_projetosocial_squad5.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}




    <style>
        .teste{
            display: flex;
            flex-wrap: wrap;
        }
        section{
            margin: 1%;
        }
    </style>


<main class="container">
    <h1>Produtos</h1>
    <p>
    <a asp-action="Create">Criar novo</a>
    </p>
    <button class="btn">
        <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Create">Cadastre o seu Produto</a>
    </button>
                            
                
<section class="teste">
@foreach (var produto in Model){
    <div class="card" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title">@produto.nome_produto</h5>
    <h6 class="card-subtitle mb-2 text-muted">@produto.FK_nome_negocio</h6>
    <p class="card-text">@produto.descricao_produto</p>
    <p class="card-text">@produto.preco_produto</p>
    <a asp-action="Details" asp-route-id="@produto.id_produto">Ver Mais
    </a>
  </div>
</div>
}
</section>
</main>

