<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmpoDelas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/header.css" />
</head>
<body>
    <header class="container-fluid" id="header1">
        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" id="header">
            <a class="texto-logo" asp-area="" asp-controller="Home" asp-action="Index">
                EmpoDelas
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>   
            <div class="navbar-collapse collapse d-md-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="linkNav" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a id="linkNav" class="nav-link" asp-area="" asp-controller="ProdutoServico" asp-action="Index">PRODUTOS E SERVIÇOS</a>
                        </li>
                        <li class="nav-item">
                            <a id="linkNav" class="nav-link" asp-area="" asp-controller="Home" asp-action="Somos">QUEM SOMOS</a>
                        </li>
                        <li class="nav-item">
                            <a id="linkNav" class="nav-link" asp-area="" asp-controller="Home" asp-action="Contato">CONTATO</a>
                        </li>
                    </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="container-fluid">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - EmpoDelas - <a asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
