@model site_projetosocial_squad5.Models.ProdutoServico

@{
    ViewData["Title"] = "EmpoDelas - Produtos e Serviços";
}


<div>
    <h1>@Html.DisplayFor(model => model.nome_produtoServico)</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código do produto:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.codigo_produtoServico)
        </dd>
        <dt class = "col-sm-2">
            Tipo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tipo_produtoServico)
        </dd>
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome_produtoServico)
        </dd>
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao_produtoServico)
        </dd>
        <dt class = "col-sm-2">
            Preço:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.preco_produtoServico)
        </dd>
        <dt class = "col-sm-2">
            Nome do negócio:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomeNegocio_autonoma)
        </dd>
        <dt class = "col-sm-2">
            Código Autônoma (Id):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FK_id_autonoma)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Index">Voltar</a> |
    <a  class="btn btn-primary" href="https://forms.gle/TYqWfbTQcKdGdQcN6" target="_blank">Apoiar esse Produto</a> 
    
    
</div>

